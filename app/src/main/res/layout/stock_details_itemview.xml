<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginTop="1dp"
    android:elevation="10dp"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="8dp"
        android:paddingBottom="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/deleteBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#FF0000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    style="@style/textHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buy Price"
                    android:textStyle="bold" />

                <TextView
                    android:textColor="@color/charcoal"
                    android:id="@+id/buyPriceTextView"
                    style="@style/textSubHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    style="@style/textHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sell Price"
                    android:textStyle="bold" />

                <TextView
                    android:textColor="@color/charcoal"
                    
                    android:id="@+id/sellPriceText"
                    style="@style/textSubHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000" />
            </LinearLayout>

        </LinearLayout>

        <!-- First Row: Invested and Profit -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/invested"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    style="@style/textHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/investment"
                    android:textStyle="bold" />

                <TextView
                    android:textColor="@color/gold"
                    style="@style/textSubHeading"
                    android:id="@+id/investedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/proft"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    style="@style/textHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/proft"
                    android:textStyle="bold" />

                <TextView
                    android:textColor="@color/seaGreen"
                    style="@style/textSubHeading"
                    android:id="@+id/profitText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000" />
            </LinearLayout>
        </LinearLayout>

        <!-- Second Row: Units and Change -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/units"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    style="@style/textHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/units"
                    android:textStyle="bold" />

                <TextView
                    android:textColor="@color/gray"
                    style="@style/textSubHeading"
                    android:id="@+id/unitsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    style="@style/textHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/change"
                    android:textStyle="bold" />

                <TextView
                    android:textColor="@color/seaGreen"
                    style="@style/textSubHeading"
                    android:id="@+id/changeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000" />
            </LinearLayout>
        </LinearLayout>

        <!-- Third Row: Buy Date and Change -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    style="@style/textHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buy Date"
                    android:textStyle="bold" />

                <TextView
                    style="@style/textSubHeading"
                    android:id="@+id/buyDateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22/7/2022" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    style="@style/textHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sell Date"
                    android:textStyle="bold" />

                <TextView
                    style="@style/textSubHeading"
                    android:id="@+id/sellDateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22/7/2022" />
            </LinearLayout>

            <!-- Duplicate Change Section Removed -->
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
